<div class="container-fluid">
  <div class="row">
    <div class="col-sm-2">
      <%= render "shared/sidenav" %>

    </div>
    <div class="col-sm-10">
      <div class="panel panel-primary">
        <div class="panel-heading">
          <h3 class="panel-title">选修课程</h3>
        </div>

        <div class="panel-body" style="min-height: 450px">
          <table class="table table-striped table-hover">
            <thead>

            <tr>
              <th>所选课程与时间</th>
              <th>周一</th>
              <th>周二</th>
              <th>周三</th>
              <th>周四</th>
              <th>周五</th>
              <th>周六</th>
              <th>周日</th>
              <th>主讲</th>

            </tr>
            </thead>
            <tbody>

             <% count=0 %>
            <% @course.each do |course| %>
                <%

                  count=count+1
                  strtime=course.course_time
                  day=strtime[1]
                  strclasstime=strtime[3..5]
                  classtime=strclasstime.split("-")

                  classstart=classtime[0].to_i
                  classend=classtime[1].to_i
                  if day=='一'
                    nday=1
                  elsif day=='二'
                    nday=2
                  elsif day=='三'
                    nday=3
                  elsif day=='四'
                    nday=4
                  elsif day=='五'
                    nday=5
                  elsif day=='六'
                    nday=6
                  elsif
                  nday=7
                  end
                %>
                <tr>
                  <td><%= count %></td>

                  

                  <td><%= if nday==1
                            course.name
                          end
                  %></td>

                  <td><%= if nday==2
                            course.name

                          end
                  %></td>

                  <td><%= if nday==3
                            course.name
                          end
                  %></td>


                  <td><%= if nday==4
                            course.name

                          end
                  %></td>

                  <td><%= if nday==5
                            course.name

                          end
                  %></td>

                  <td><%= if nday==6
                            course.name

                          end
                  %></td>

                  <td><%= if nday==7
                            course.name
                          end
                  %></td>

                  <td></td>

                </tr>
            <% end %>

            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>


